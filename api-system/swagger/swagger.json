        "/v1/visits": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "tags": [
                    "Visit API"
                ],
                "parameters": [
                    {
                        "type": "string",
                        "description": "query userinfo",
