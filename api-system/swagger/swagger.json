    "paths": {
        "/v1/captcha": {
            "get": {
                "tags": [
                    "Captcha API"
                ],
                "summary": "请求生成验证码",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.ApiJson"
                        }
                    }
                }
            }
        },
        "/v1/captcha/{file}": {
            "get": {
                "consumes": [
                    "image/png"
                ],
                "tags": [
                    "Captcha API"
                ],
                "summary": "获取验证码图片",
                "parameters": [
                    {
                        "type": "string",
                        "description": "image file name",
                        "name": "file",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "name": "lang",
                        "in": "query"
                    },
                    {
                        "type": "boolean",
                        "name": "reload",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": ""
                    }
                }
            }
        },
